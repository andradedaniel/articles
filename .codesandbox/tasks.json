{
    "$schema" : "https://codesandbox.io/schemas/tasks.json",
    "setupTasks" : [
        { "name" : "Install Template Node Dependencies", "command" : "npm --prefix template install" },
        { "name" : "Install Template Composer Binary", "command" : "cd template && node node_modules/browser-php/build/installer.js" },
        { "name" : "Install Template PHP Dependencies", "command" : "npm --prefix template run composer install -- --ignore-platform-reqs --no-scripts" },
        { "name" : "Prepare Template Environment Variables", "command" : "cp template/.env.example template/.env && npm --prefix template run php artisan key:generate" }
    ],
    "tasks" : {
        "dev" : { "name" : "Start Dev and PHP Server", "command" : "npm --prefix template run serve", "preview" : { "port" : 2222 }, "runAtStart": true },
        "cli" : { "name" : "Start New Terminal", "command" : "npm --prefix template run greet", "runAtStart" : true }
    }
}
